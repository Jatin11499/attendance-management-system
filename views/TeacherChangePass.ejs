<%- include("partials/Header") -%>
<%- include("partials/NavbarT") -%>

<div class="all_home_main">
    <%- include("partials/SidebarTeacher") -%>
    <div class="all_home_content">
        <div class="student_schedule_main">
            <h2 class="change_pass_heading">Change Password</h2>

            <div class="container">
                <form action="/TeacherChangePass?teacherid=<%= teacherid %>" method="POST" onsubmit ="return validatePassword()">
                    <div class="form-group row">
                        <label for="oldpsw" class="col-md-3">Old Password:</label>
                        <input class="form-control col-md-8" type="text" id="oldpsw" name="oldpsw" required>
                        <p style="display: none;" id="oldpass"><%= oldpass %></p>
                    </div>
                    
                    <div class="form-group row">
                        <label for="psw" class="col-md-3">New Password:</label>
                        <input class="form-control col-md-8" type="password" id="psw" name="psw" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                        <button class="btn pass_toggle_btn" type="button"><i class="fas fa-eye ptb_icon"></i></button>
                        
                    </div>
                    
                    <div class="form-group row">
                        <label for="psw" class="col-md-3">Confirm New Password:</label>
                        <input class="form-control col-md-8" type="password" id="confpsw" name="confpsw" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                        <button class="btn pass_toggle_btn" type="button"><i class="fas fa-eye ptb_icon"></i></button>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </form>
            </div>

            <div id="message">
                <h5>Password must contain the following:</h5>
                <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                <p id="number" class="invalid">A <b>number</b></p>
                <p id="length" class="invalid">Minimum <b>8 characters</b></p>
            </div>
        </div>
    </div>
</div>

</body>
<script>
    let sideLinks = document.querySelectorAll(".all_sidebar_links");
    sideLinks[4].classList.add("active_sidebar");
</script>
<script src="scripts/ChangePass.js" type="text/javascript"></script>
</html>