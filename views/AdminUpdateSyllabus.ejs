<%- include("partials/Header") -%>
<%- include("partials/NavbarA") -%>

<div class="all_home_main">
    <%- include("partials/SidebarAdmin") -%>
    <div class="all_home_content">
        <div class="student_schedule_main">
            <h2 class="admin_add_heading">Update Syllabus</h2>
            
            <div class="container" style="padding-bottom: 20px;">
                <form action="/AdminUpdateSyllabus" method="POST">
                    <div class="form-group row">
                        <label for="#year" class="col-md-3">Year:</label>
                        <select id="year" class="form-control col-md-8 up_input" name="year">
                            <option>--Select--</option>
                            <option value="2">2nd</option>
                            <option value="3">3rd</option>
                            <option value="4">4th</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label for="#sem" class="col-md-3">Semester:</label>
                        <select id="sem"  class="form-control col-md-8 up_input" name="semester">
                            <option>--Select--</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label for="#branch" class="col-md-3">Branch:</label>
                        <select id="branch" class="form-control col-md-8 up_input" name="branch">
                            <option value="both">CSE/IT</option>
                            <option value="CSE">CSE</option>
                            <option value="IT">IT</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label for="#sub" class="col-md-3">Subject:</label>
                        <select id="sub"  class="form-control col-md-8 up_input" name="subjectName">
                            <option>--Select--</option>
                        </select>
                    </div>

                    <div class="form-group row">
                        <label for="#topics" class="col-md-3">Topics:<p style="color: red;margin: 0;">Note: Write the topics seperated by semicolon(;).</p></label>
                        <textarea name="topics" id="topics" rows="3" class="form-control col-md-8 up_input"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg submit_btn" style="margin-top: 20px;">Update</button>
                </form>
            </div>
            
        </div>
    </div>
</div>

</body>
<script>
    let sideLinks = document.querySelectorAll(".all_sidebar_links");
    sideLinks[3].classList.add("active_sidebar");
</script>
<script src="scripts/AdminUpdateSyllabus.js" type="text/javascript"></script>
</html>