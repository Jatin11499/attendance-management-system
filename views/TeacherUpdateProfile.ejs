<%- include("partials/Header") -%>
<%- include("partials/NavbarT") -%>

<div class="all_home_main">
    <%- include("partials/SidebarTeacher") -%>
    <div class="all_home_content">
        <div class="student_schedule_main">
            <h2 style="padding: 20px;">Update Profile</h2>

            <form action="/TeacherUpdateProfile?teacherid=<%= teacherid %>" method="POST">
                <div class="form-group row">
                    <label class="col-md-3">Email:</label><input type="email" class="form-control col-md-8 up_input" name="email" value="<%= email %>" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
                </div>
                <div class="form-group row">
                    <label class="col-md-3">Full Name:</label><input type="text" class="form-control col-md-8 up_input" name="fullname" value="<%= fullname %>"  required>
                </div>
                <div class="form-group row">
                    <label class="col-md-3">Teacher ID:</label><input type="text" class="form-control col-md-8 up_input" name="teacherid" value="<%= teacherid %>" required>
                </div>
               
                <div class="form-group row">
                    <label class="col-md-3">Mobile Number:</label> <input type="text" class="form-control col-md-8 up_input" name="mobileno" value="<%= mobileno %>"  pattern="[789][0-9]{9}" required>
                </div>
            <button type="submit" class="btn btn-primary btn-lg submit_btn">Save Changes</button>
          
            </form>
        </div>
    </div>
</div>

</body>
<script>
    let sideLinks = document.querySelectorAll(".all_sidebar_links");
    sideLinks[5].classList.add("active_sidebar");
</script>
</html>